# Database Configuration
# Use 'db' when running via Docker Compose, 'localhost' for local development
DB_HOST=db
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=nuxt_db

# Nuxt Configuration
# Reconstructed in compose.yaml for Docker, but defined here for local dev
NUXT_PRIVATE_DATABASE_URL=mysql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}
NUXT_SESSION_PASSWORD=replace_with_a_32_character_long_password
NUXT_OAUTH_GOOGLE_CLIENT_ID=your_google_client_id
NUXT_OAUTH_GOOGLE_CLIENT_SECRET=your_google_client_secret